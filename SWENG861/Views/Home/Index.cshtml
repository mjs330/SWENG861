@{
    ViewBag.Title = "Home";
}
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
</head>

<div class="text-center">
    <h1 class="display-4">Search</h1>
    <hr />
    <p><a href="/api/Spotify/SearchArtist/beatles">Click here</a> to conduct a test search by artist.</p>
    <p><a href="/api/Spotify/SearchTitle/hey jude">Click here</a> to conduct a test search by title.</p>
</div>

<div id="ArtistSearchResults" class="text-center">
    <table id="ArtistSearchResultsTable">
        <thead>
            <tr>
                <th>Artist</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div id="TitleSearchResults" class="text-center">
    <table id="TitleSearchResultsTable">
        <thead>
            <tr>
                <th>Artist</th>
                <th>Title</th>
                <th>Album</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ArtistSearchResultsTable").dataTable();
        $("#TitleSearchResultsTable").dataTable();
    });
</script>